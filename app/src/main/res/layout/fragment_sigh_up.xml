<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SighUpFragment">

    <RelativeLayout
        android:id="@+id/sign_up_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_sign_up"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="@color/maincolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hint_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sign_up"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:text="Complete the form to create\nyour account"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/editText_input_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sign_up"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="56dp"
            android:background="@drawable/input_login_shape"
            android:hint="Alexis Dubois"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:padding="15dp" />

        <EditText
            android:id="@+id/editText_input_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_input_full_name"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="56dp"
            android:background="@drawable/input_login_shape"
            android:hint="0123456789"
            android:maxLines="1"
            android:maxLength="10"
            android:inputType="numberDecimal"
            android:padding="15dp" />

        <EditText
            android:id="@+id/editText_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_input_phone_number"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="56dp"
            android:background="@drawable/input_login_shape"
            android:hint="*********"
            android:maxLength="15"
            android:inputType="textPassword"
            android:padding="15dp" />

        <EditText
            android:id="@+id/editText_input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_input_password"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="56dp"
            android:background="@drawable/input_login_shape"
            android:hint="*********"
            android:maxLength="15"
            android:inputType="textPassword"
            android:padding="15dp" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginBottom="57dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sign_up"
            android:layout_marginStart="50dp"
            android:layout_marginTop="65dp"
            android:text="Full Name" />

        <TextView
            android:id="@+id/tv_text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_input_full_name"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:text="Phone" />

        <TextView
            android:id="@+id/tv_text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_input_phone_number"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:text="Password" />

        <TextView
            android:id="@+id/tv_text_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_input_password"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:text="Confirm Password" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>